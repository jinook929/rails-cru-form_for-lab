<h1>New Artist</h1>

<%= form_for(@artist) do |f| %>
  <p>
    <%= f.label :name, "Artist Name:", for: "artist_name" %>
    <br>
    <%= f.text_field :name, autofocus: true %>
  </p>
  <p>
    <%= f.label :bio, "Artist Bio:", for: "artist_bio" %>
    <br>
    <%= f.text_area :bio %>
  </p>
  <%= f.submit "Create Artist" %>

<% end %>

<p>
  <%= link_to "Back to List", artists_path %>
</p>
